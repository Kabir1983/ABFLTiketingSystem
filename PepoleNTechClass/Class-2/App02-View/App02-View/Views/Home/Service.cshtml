@{
    ViewData["Title"] = "Service";
    int limit = ViewBag.limit;
}

<h3 class="alert alert-primary">Service</h3>
<br />

<h4 class="text-primary">@ViewBag.msg</h4>
<form asp-action="Service" method="get">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="input-group">
                <span>Required Service:</span>
                <input name="uservice" type="text" class="form-control" />
                <input name="limit" type="number" class="form-control" />
                <button class="btn btn-success" type="submit"> Submit </button>
            </div>
        </div>
    </div>
</form>
<br/>

@for (int i = 0; i < limit; i++)
{
    <h4 class="text-primary">@(i+1). @ViewBag.abc</h4>
}
