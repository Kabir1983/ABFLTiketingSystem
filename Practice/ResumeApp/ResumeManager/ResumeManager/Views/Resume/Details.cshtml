@model ResumeManager.Models.Applicant

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Applicant</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Qualification)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Qualification)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalExperience)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalExperience)
        </dd>
    </dl>
</div>
<div class="col-md-12">
    <table id="ExpTable" class="table table-striped table-sm">
        <thead>
            <tr>
                <th>
                    Company Name
                </th>
                <th>
                    Designation
                </th>
                <th>
                    YearsWorked
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Experiences)
            @* @for (int i = 0; i < Model.Experiences.Count; i++) *@
            {
                <tr>
                    <td>
                        @* @Html.EditorFor(x=>x.Experiences[i].CompanyName, new{htmlAttributes= new{@class="form-control"}}) *@
                        <input asp-for="@item.CompanyName" class="form-control-plaintext" readonly />
                    </td>
                    <td>
                        @* @Html.EditorFor(x=>x.Experiences[i].Designation, new{htmlAttributes=new{@class="form-control"}}) *@
                        <input asp-for="@item.Designation" class="form-control-plaintext" readonly />
                    </td>
                    <td>
                        @* @Html.EditorFor(x=>x.Experiences[i].YearsWorked, new{htmlAttributes=new{@class="form-control"}}) *@
                        <input asp-for="@item.YearsWorked" class="form-control-plaintext" readonly />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
